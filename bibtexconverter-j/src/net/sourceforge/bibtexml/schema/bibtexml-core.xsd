<!-- Namespace and namespace prefix -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://bibtexml.sf.net/" xmlns:ns1="http://bibtexml.sf.net/">
  <xs:include schemaLocation="bibtexml-strict.xsd"/>
  <!-- Reuse the strict BibTeXML schema -->
  <!--
    Allow fields in any order.
    Retain required and optional fields to aid schema-aware XML editors.
  -->
  <xs:complexType name="article.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:journal"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:pages"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="book.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:choice>
        <xs:element ref="ns1:author"/>
        <xs:element ref="ns1:editor"/>
      </xs:choice>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:publisher"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:series"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:edition"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="booklet.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:howpublished"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="inbook.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:choice>
        <xs:element ref="ns1:author"/>
        <xs:element ref="ns1:editor"/>
      </xs:choice>
      <xs:element ref="ns1:title"/>
      <xs:choice>
        <xs:choice>
          <xs:element ref="ns1:chapter"/>
          <xs:element ref="ns1:pages"/>
        </xs:choice>
        <xs:element ref="ns1:pages"/>
      </xs:choice>
      <xs:element ref="ns1:publisher"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:series"/>
      <xs:element ref="ns1:type"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:edition"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="incollection.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:booktitle"/>
      <xs:element ref="ns1:publisher"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:editor"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:series"/>
      <xs:element ref="ns1:type"/>
      <xs:element ref="ns1:chapter"/>
      <xs:element ref="ns1:pages"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:edition"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="inproceedings.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:booktitle"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:editor"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:series"/>
      <xs:element ref="ns1:pages"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:organization"/>
      <xs:element ref="ns1:publisher"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="manual.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:organization"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:edition"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="thesis.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:school"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:type"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="misc.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:howpublished"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="proceedings.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:editor"/>
      <xs:element ref="ns1:volume"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:series"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:organization"/>
      <xs:element ref="ns1:publisher"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="techreport.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:institution"/>
      <xs:element ref="ns1:year"/>
      <xs:element ref="ns1:type"/>
      <xs:element ref="ns1:number"/>
      <xs:element ref="ns1:address"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:note"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <xs:complexType name="unpublished.content">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="ns1:author"/>
      <xs:element ref="ns1:title"/>
      <xs:element ref="ns1:note"/>
      <xs:element ref="ns1:month"/>
      <xs:element ref="ns1:year"/>
      <xs:group ref="ns1:common.fields.class"/>
    </xs:choice>
  </xs:complexType>
  <!-- Extend common fields (at this point key? & crossref?) -->
</xs:schema>
